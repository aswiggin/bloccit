<h4>Add a comment</h4>
<!-- create a form for post and comment because comments are nested in posts -->
<%= form_for [post, comment] do |f| %>
<div class='form-group'>
    <!-- add a hidden label for users using screen readers -->
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter a new comment" %>
</div>
<%= f.submit "Submit Commnent", class: 'btn btn-default pull-right' %>
<% end %>