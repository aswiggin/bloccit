 <h1>Topics</h1>
 
 <div class="row">
   <div class="col-md-8">
     <% @topics.each do |topic| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
 <!-- creating a link to the show view for each topic -->
             <%= link_to topic.name, topic %>
           </h4>
           <small>
             <%= topic.description %>
           </small>
         </div>
       </div>
     <% end %>
   </div>
   <!-- check if there is a signed user and if that user is the admin -->
   <% if user_is_authorized_for_topics? %>
   <div class="col-md-4">
 <!-- create a link to create a new topic -->
     <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
   </div>
   <% end %>
 </div>